{
    "manifest_version": 3,
    "name": "DSA Tracker",
    "version": "1.1.0",
    "description": "Track your daily coding questions progress across platforms",
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "https://leetcode.com/*",
        "https://codeforces.com/*",
        "https://www.hackerrank.com/*",
        "https://www.geeksforgeeks.org/*",
        "https://www.codechef.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon.png",
            "48": "icons/icon.png",
            "128": "icons/icon.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://leetcode.com/*",
                "https://codeforces.com/*",
                "https://www.hackerrank.com/*",
                "https://www.geeksforgeeks.org/*",
                "https://www.codechef.com/*",
                "https://*/*",
                "http://*/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "dashboard/*",
                "icons/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    }
}